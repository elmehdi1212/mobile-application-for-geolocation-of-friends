<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/carmdViewFriends"
        android:layout_width="match_parent"
        android:layout_height="59dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <TextView
                android:id="@+id/symbole"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_contact"
                android:paddingTop="3dp"
                android:text="ss"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="23dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@+id/symbole"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/requestName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oubari"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/requestPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06123456789"
                    android:textColor="#9f9f9f"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="226dp"
                android:layout_toRightOf="@+id/layout"
                android:orientation="vertical">
                <Button
                    android:id="@+id/sendRequest"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:icon="@drawable/ic_done"
                    app:iconGravity="textStart" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>